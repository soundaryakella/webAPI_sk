<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Regression Suite" parallel="tests" thread-count="4">
    <listeners>
        <listener class-name="listeners.ExtentTestListener"></listener>
    </listeners>

    <test name="API Tests" parallel="methods" thread-count="2">
        <packages>
            <package name="apiTests"/>
        </packages>
    </test>

    <test name="Web Tests" parallel="methods" thread-count="2">
        <classes>
            <class name="webTests.LoginTest"/>
        </classes>
    </test>

</suite>
